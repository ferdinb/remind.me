<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple" >

        <com.f.ninaber.android.widget.ArialText
            android:id="@+id/action_bar_title"
            style="@style/FontWhiteHuge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_size_10dp"
            android:layout_marginRight="@dimen/padding_size_10dp"
            android:text="@string/app_name" />

        <LinearLayout
            android:id="@+id/action_bar_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/state_bg_purple"
            android:clickable="true"
			android:padding="@dimen/padding_size_10dp">

            <ImageView
                android:layout_width="@dimen/plus_addtask_size"
                android:layout_height="@dimen/plus_addtask_size"
                android:background="@drawable/btn_add_reminder"
                android:duplicateParentState="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_bar_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/action_bar_add"
            android:background="@drawable/state_bg_purple"
            android:clickable="true"
			android:padding="@dimen/padding_size_10dp">

            <ImageView
                android:layout_width="@dimen/plus_addtask_size"
                android:layout_height="@dimen/plus_addtask_size"
                android:background="@drawable/btn_add_filter"
                android:duplicateParentState="true" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/list_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp" >
    </ListView>

</LinearLayout>