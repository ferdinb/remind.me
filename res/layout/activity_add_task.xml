<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/add_task_date_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_drawable_white_gray"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_size_5dp"
        android:paddingLeft="@dimen/padding_size_15dp"
        android:paddingRight="@dimen/padding_size_15dp"
        android:paddingTop="@dimen/padding_size_5dp" >

        <com.f.ninaber.android.widget.ArialText
            android:id="@+id/add_task_date"
            style="@style/FontBlackLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_size_10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size_5dp"
            android:background="@drawable/ic_drop_down" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_size_5dp"
        android:paddingLeft="@dimen/padding_size_15dp"
        android:paddingRight="@dimen/padding_size_15dp"
        android:paddingTop="@dimen/padding_size_5dp" >

        <Switch
            android:id="@+id/add_task_repeat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/repeat"
            android:textOff="@string/off"
            android:textOn="@string/on" >
        </Switch>

        <LinearLayout
            android:id="@+id/add_task_time_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/add_task_repeat_btn"
            android:layout_alignTop="@id/add_task_repeat_btn"
            android:layout_toLeftOf="@id/add_task_repeat_btn"
            android:background="@drawable/background_drawable_white_gray"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/add_task_timer_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_size_10dp"
                android:background="@drawable/ic_add_task_time" />

            <com.f.ninaber.android.widget.ArialText
                android:id="@+id/add_task_time"
                style="@style/FontBlackNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:singleLine="true" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_size_5dp"
        android:paddingLeft="@dimen/padding_size_15dp"
        android:paddingRight="@dimen/padding_size_15dp"
        android:paddingTop="@dimen/padding_size_5dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_size_10dp"
            android:background="@drawable/ic_add_task_title" />

        <EditText
            android:id="@+id/add_task_title"
            style="@style/FontBlackNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_drawable_white_gray"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_size_5dp"
        android:paddingLeft="@dimen/padding_size_15dp"
        android:paddingRight="@dimen/padding_size_15dp"
        android:paddingTop="@dimen/padding_size_5dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_size_10dp"
            android:background="@drawable/ic_add_task_message" />

        <EditText
            android:id="@+id/add_task_notes"
            style="@style/FontBlackNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/notes" />
    </LinearLayout>

</LinearLayout>