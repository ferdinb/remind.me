    <style name="Theme.Rmindme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_rmindme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Rmindme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Rmindme</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Rmindme</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Rmindme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Rmindme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_rmindme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_rmindme</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Rmindme</item>
        <item name="android:windowBackground">@color/grey_300</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:windowBackground">@color/grey_300</item>
    </style>

    <style name="ActionBar.Solid.Rmindme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_rmindme</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_rmindme</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_rmindme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Rmindme</item>
    </style>

    <style name="ActionBar.Transparent.Rmindme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_rmindme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Rmindme</item>
    </style>

    <style name="PopupMenu.Rmindme" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_rmindme</item>
    </style>

    <style name="DropDownListView.Rmindme" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_rmindme</item>
    </style>

    <style name="ActionBarTabStyle.Rmindme" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_rmindme</item>
    </style>

    <style name="DropDownNav.Rmindme" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_rmindme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_rmindme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_rmindme</item>
    </style>

    <style name="ProgressBar.Rmindme" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_rmindme</item>
    </style>

    <style name="ActionButton.CloseMode.Rmindme" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_rmindme</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Rmindme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Rmindme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Rmindme</item>
    </style>

    <style name="FontBlackNormal">
